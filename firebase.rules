rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admin can read/write all
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Visitors
    match /visitors/{visitorId} {
      // Guards can create visitors
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'guard';
      
      // Admin read/write all
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Residents can read/update visitors for their specific flat
      allow read, update: if request.auth != null && resource.data.flatNumber == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.flatNumber;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
