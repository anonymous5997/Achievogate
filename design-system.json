{
    "name": "AchievoGate Premium Soft-Cinematic Design",
    "version": "2.0",
    "goal": "Premium, depth-rich interface with soft cinematic motion and better color harmony",
    "brand_personality": {
        "keywords": [
            "secure",
            "trustworthy",
            "modern",
            "calm",
            "premium",
            "soft-cinematic"
        ]
    },
    "color_system": {
        "primary": "#5B6CFF",
        "primary_gradient": [
            "#5B6CFF",
            "#7C8CFF"
        ],
        "accent": "#2EC5CE",
        "accent_soft": "#CFF7F9",
        "success": "#22C55E",
        "warning": "#F59E0B",
        "danger": "#EF4444",
        "background": {
            "base": "#F6F8FC",
            "elevated": "#FFFFFF",
            "gradient_overlay": [
                "#EEF2FF",
                "#E6FBFF"
            ]
        },
        "text": {
            "primary": "#0F172A",
            "secondary": "#475569",
            "tertiary": "#64748B",
            "muted": "#94A3B8"
        },
        "surface_rules": [
            "never use pure white full-screen without gradient tint",
            "top corners use soft radial color wash",
            "primary actions always use gradient fill",
            "icons use tinted containers not raw color"
        ]
    },
    "background_style": {
        "type": "soft-gradient-with-radial-blobs",
        "radial_blobs": {
            "enabled": false,
            "opacity": 0.18,
            "blur": 40,
            "positions": [
                "top-left",
                "bottom-right"
            ],
            "safe_mode": true
        },
        "noise_texture": {
            "enabled": false,
            "opacity": 0.03,
            "safe_mode": true
        }
    },
    "typography": {
        "heading": {
            "h1": {
                "size": 28,
                "weight": "700",
                "color": "#0F172A",
                "letterSpacing": -0.5
            },
            "h2": {
                "size": 22,
                "weight": "700",
                "color": "#0F172A"
            },
            "h3": {
                "size": 18,
                "weight": "600",
                "color": "#0F172A"
            }
        },
        "body": {
            "size": 15,
            "weight": "400",
            "color": "#475569",
            "lineHeight": 22
        },
        "label": {
            "size": 12,
            "weight": "600",
            "letterSpacing": 0.6,
            "color": "#64748B",
            "textTransform": "uppercase"
        }
    },
    "card_system": {
        "radius": 20,
        "padding": 18,
        "background": "#FFFFFF",
        "shadow": {
            "color": "#000000",
            "opacity": 0.08,
            "blur": 24,
            "y": 8
        },
        "highlight_edge": {
            "enabled": true,
            "color": "white",
            "opacity": 0.6
        },
        "motion": "float-on-enter"
    },
    "icon_containers": {
        "shape": "rounded-square",
        "radius": 14,
        "padding": 12,
        "style": "tinted-background",
        "tint_opacity": 0.18,
        "primary_tint": "rgba(91, 108, 255, 0.18)",
        "accent_tint": "rgba(46, 197, 206, 0.18)",
        "no_flat_icons": true
    },
    "button_system": {
        "primary": {
            "fill": "gradient",
            "gradient": [
                "#5B6CFF",
                "#7C8CFF"
            ],
            "radius": 16,
            "height": 54,
            "text_weight": "600",
            "shadow": "soft-colored",
            "press_animation": {
                "scale": 0.96,
                "duration": 120,
                "glow_increase": false
            }
        },
        "secondary": {
            "fill": "soft-tint",
            "background": "rgba(91, 108, 255, 0.08)",
            "border": "none",
            "text_color": "#5B6CFF"
        }
    },
    "motion_system": {
        "philosophy": "soft-depth-motion-everywhere",
        "durations": {
            "micro": 120,
            "short": 200,
            "card_enter": 320,
            "screen_enter": 420
        },
        "easing": "easeOutCubic",
        "use_native_driver": true,
        "animations": {
            "cards": "fade-translateY-slight-scale",
            "icons": "micro-pulse-on-tap",
            "buttons": "scale-on-press",
            "screens": "fade-translateY-scale"
        },
        "stagger": {
            "list_items": 80,
            "cards": 100
        }
    },
    "depth_model": {
        "layers": 4,
        "rules": [
            "primary actions highest contrast",
            "cards elevated over gradient",
            "icons elevated over cards",
            "background always soft"
        ]
    },
    "consistency_rules": [
        "no flat white cards without shadow",
        "no raw colored icons without container",
        "primary actions always use gradient",
        "every major card has radius >= 16",
        "every screen has soft color wash background"
    ],
    "safe_animation_rules": {
        "use_native_driver": true,
        "allowed_properties": [
            "opacity",
            "transform: translateX",
            "transform: translateY",
            "transform: scale"
        ],
        "forbidden_properties": [
            "width",
            "height",
            "top",
            "left",
            "right",
            "bottom"
        ],
        "max_concurrent_animations": 3,
        "max_duration_ms": 500
    },
    "implementation_hints": {
        "react_native_safe": [
            "use Animated API not Reanimated (Expo Go safe)",
            "use LinearGradient for buttons",
            "use transform for all position changes",
            "stagger list animations",
            "cleanup animations on unmount"
        ],
        "expo_compatible": true,
        "tested_in_expo_go": true
    }
}